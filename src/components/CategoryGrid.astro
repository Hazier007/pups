---
interface Category {
  title: string;
  description: string;
  image: string;
  link: string;
}

const categories: Category[] = [
  {
    title: "Werkhonden",
    description: "Intelligente en energieke honden, perfect voor een actieve levensstijl",
    image: "/images/working-dogs.jpg",
    link: "/type/working"
  },
  {
    title: "Sporthonden",
    description: "Atletische en veelzijdige honden voor sport en spel",
    image: "/images/sporting-dogs.jpg",
    link: "/type/sporting"
  },
  {
    title: "Gezelschapshonden",
    description: "Vriendelijke en sociale honden, ideaal voor het gezin",
    image: "/images/companion-dogs.jpg",
    link: "/type/toy"
  },
  {
    title: "TerriÃ«rs",
    description: "Levendige en karaktervolle honden met een sterke persoonlijkheid",
    image: "/images/terriers.jpg",
    link: "/type/terrier"
  },
  {
    title: "Jachthonden",
    description: "Betrouwbare en volhardende honden met uitstekend reukvermogen",
    image: "/images/hound-dogs.jpg",
    link: "/type/hound"
  }
];
---

<section id="categories" class="py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-12">Ontdek per Type</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {categories.map(category => (
        <a href={category.link} class="group">
          <div class="bg-white rounded-2xl shadow-md overflow-hidden transition-all duration-300 group-hover:shadow-xl">
            <div class="aspect-w-16 aspect-h-9 relative">
              <img 
                src={category.image} 
                alt={category.title}
                class="object-cover w-full h-48 group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 group-hover:text-blue-600 transition-colors">{category.title}</h3>
              <p class="text-gray-600">{category.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>