---
interface Props {
  levenskosten: number;
}

const { levenskosten } = Astro.props;

const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat('nl-BE', {
    style: 'currency',
    currency: 'EUR',
    minimumFractionDigits: 0,
  }).format(amount);
};
---

<div class="bg-gray-50 rounded-xl p-6 mb-8">
  <h2 class="text-2xl font-semibold mb-4">Kosten</h2>
  <p class="text-gray-600 mb-4">Geschatte levensduur kosten:</p>
  <p class="text-4xl font-bold text-gray-900 mb-4">
    {formatCurrency(levenskosten)}
  </p>
  <p class="text-sm text-gray-500">
    Dit bedrag is inclusief voeding, verzorging, medische kosten en verzekering over de gehele levensduur.
  </p>
</div>