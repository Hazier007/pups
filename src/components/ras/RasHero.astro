---
interface Props {
  ras: string;
  type: string;
}

const { ras, type } = Astro.props;

const getHeroImage = (type: string) => {
  const images = {
    'sporting': '/images/hero-sporting.jpg',
    'working': '/images/hero-working.jpg',
    'terrier': '/images/hero-terrier.jpg',
    'hound': '/images/hero-hound.jpg',
    'toy': '/images/hero-toy.jpg'
  };
  return images[type] || '/images/hero-default.jpg';
};

const vertaalType = (type: string) => {
  const vertalingen = {
    'sporting': 'Sport',
    'working': 'Werk',
    'terrier': 'TerriÃ«r',
    'hound': 'Jacht',
    'toy': 'Gezelschaps',
    'herding': 'Herders',
    'non-sporting': 'Niet-sport'
  };
  return vertalingen[type] || type;
};
---

<div class="relative h-[400px] bg-gradient-to-r from-blue-600 to-blue-800">
  <div class="absolute inset-0 overflow-hidden">
    <img 
      src={getHeroImage(type)}
      alt={ras}
      class="w-full h-full object-cover opacity-40"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/75 to-gray-900/25"></div>
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full flex items-center">
    <div>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
        {ras}
      </h1>
      <p class="text-xl text-blue-100">
        {vertaalType(type)} hond
      </p>
    </div>
  </div>
</div>