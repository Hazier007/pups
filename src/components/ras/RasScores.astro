---
interface Props {
  score: number;
  geschiktKinderen: number;
}

const { score, geschiktKinderen } = Astro.props;
---

<div class="mb-8">
  <h2 class="text-2xl font-semibold mb-4">Scores</h2>
  <div class="space-y-4">
    <div>
      <div class="flex justify-between mb-2">
        <span class="font-medium">Algemene Score</span>
        <span class="text-blue-600">{score} / 5</span>
      </div>
      <div class="h-2 bg-gray-200 rounded-full">
        <div class="h-2 bg-blue-600 rounded-full" style={`width: ${(score / 5) * 100}%`}></div>
      </div>
    </div>
    <div>
      <div class="flex justify-between mb-2">
        <span class="font-medium">Geschikt voor Kinderen</span>
        <span class="text-green-600">{geschiktKinderen} / 5</span>
      </div>
      <div class="h-2 bg-gray-200 rounded-full">
        <div class="h-2 bg-green-600 rounded-full" style={`width: ${(geschiktKinderen / 5) * 100}%`}></div>
      </div>
    </div>
  </div>
</div>